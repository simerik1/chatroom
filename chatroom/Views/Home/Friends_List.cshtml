@model IEnumerable<chatroom.Models.FriendRequest>


@{
    ViewBag.Title = "Friends_List";
}

<h2>My Friends</h2>

<div class="container">
    <table class="table">
        <thead>
            <tr>
                <th>Profile Picture</th>
                <th>Sender Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <img src="@Url.Content("~/ProfileP/" + item.ProfilePicture)" alt="DP" width="100" height="100" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SenderName)
                    </td>
                    <td>
                        <a href="@Url.Action("Profile_Details", new { id = item.SenderId })" class="btn btn-primary">Profile</a>
                        <form action="/Home/Unfriend" method="post" class="d-inline">
                            <input type="hidden" name="SenderId" value="@item.SenderId" />
                            <button type="submit" class="btn btn-danger">Unfriend</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
