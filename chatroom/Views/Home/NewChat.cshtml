@model IEnumerable<chatroom.Models.Message>

@{
    ViewBag.Title = "NewChat";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <style>
        body {
            background-color: #e5ddd5;
            font-family: Arial, sans-serif;
        }

        .container-fluid {
            height: 100vh;
        }

        .chat-list {
            height: calc(100vh - 60px);
            overflow-y: auto;
            padding: 10px;
        }

        .chat-details {
            height: calc(100vh - 60px);
            overflow-y: auto;
            padding: 10px;
        }

        .message {
            margin-bottom: 10px;
        }

        .message-header {
            font-size: 14px;
            font-weight: bold;
        }

        .sender {
            color: #075e54;
        }

        .timestamp {
            color: #999;
            font-size: 12px;
            margin-left: 5px;
        }

        .message-content {
            background-color: #dcf8c6;
            border-radius: 10px;
            color: #075e54;
            display: inline-block;
            font-size: 16px;
            margin-top: 5px;
            padding: 10px;
            position: relative;
            max-width: 80%;
        }

            .message-content::before {
                border-bottom: 10px solid #dcf8c6;
                border-left: 10px solid transparent;
                border-right: 10px solid transparent;
                content: "";
                position: absolute;
                left: -20px;
                top: 10px;
            }

        .open-chat {
            background-color: #075e54;
            border: none;
            border-radius: 5px;
            color: white;
            cursor: pointer;
            display: inline-block;
            font-size: 14px;
            margin-top: 5px;
            padding: 5px 10px;
            text-align: center;
            text-decoration: none;
        }

            .open-chat:hover {
                background-color: #054f39;
            }
    </style>
</head>
<body>
    <div class="container-fluid h-100">
        <div class="row h-100">
            <div class="col-4 border-end">
                <div class="chat-list">
                    <!-- ... -->
                </div>
            </div>
            <div class="col-8">
                <div class="chat-details">
                    <!-- ... -->
                </div>
            </div>
        </div>
    </div>
    <script>
        $(document).ready(function () {
            $('.open-chat').click(function (e) {
                e.preventDefault();
                var chatId = $(this).data('chat-id');
                $.ajax({
                    url: '/Home/ChatDetails',
                    type: 'GET',
                    data: { chatId: chatId },
                    success: function (response) {
                        $('.chat-details').html(response);
                    },
                    error: function (xhr, status, error) {
                        console.error(xhr.responseText);
                    }
                });
            });
        });
    </script>
</body>
</html>
